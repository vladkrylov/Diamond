function test_poisson
    N_bins = 1000;
    
    files = {
        '../lambda=8.csv'...
        ,'../lambda=5.csv'...
        ,'../lambda=4.5.csv'...
        ,'../expdata_Run16_Beamtime5.csv'...
        };
    
    
    L = length(files);
    x = zeros(N_bins, L);
    y = zeros(N_bins, L);
    legendInfo = cell(1,L);
    
    for i=1:L
        data = load(files{i});
        [counts, centers] = hist(data, N_bins);
        x(:,i) = MeV2Volts(centers.');
        y(:,i) = counts.';
        
        [pathstr,name,ext] = fileparts(files{i});
        legendInfo{i} = name;
    end
    
    figure(1)
    stairs(x, y)
    legend(legendInfo)
end

function y = MeV2Volts(x)
    y = x / 0.226 * 0.012;
end